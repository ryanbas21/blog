{
	"compilerOptions": {
		"compileOnSave": false,
		"target": "esnext",
		"module": "esnext",
		"jsx": "preserve",
		"allowJs": true,
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"removeComments": false,
		"preserveConstEnums": true,
		"sourceMap": true,
		"skipLibCheck": true,
		"noFallthroughCasesInSwitch": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"emitDecoratorMetadata": true,
		"forceConsistentCasingInFileNames": false,
		"importHelpers": true,
		"baseUrl": "src",
		"paths": {
			"components/*": ["./components/*"],
			"features/*": ["./features/*"],
			"store/*": ["./store/*"],
			"types/*": ["./types/*"],
			"hoc/*": ["./hoc"]
		},
		"lib": ["es2017", "dom"],
		"typeRoots": ["node_modules/@types", "src/types"]
	},
	"exclude": [
		"node_modules",
		"out",
		".next",
		"./postcss.config.js",
		"./next.config.js",
		"./jest.config.js"
	]
}
